<h1 class="d-flex flex-row justify-content-center">Our Products</h1> 
{{#if user}}
<a href="/products/add" class="d-flex flex-row justify-content-center"> Add a New product</a>{{/if}}
{{#each products}}
<div class="d-flex flex-row justify-content-center">
<div class="card p-2 m-2" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">Quantity: {{this.quantity}}</h6>
    <h6 class="card-subtitle mb-2 text-muted">Department: {{this.department}}</h6>
{{#if ../user}}
     <a href="/products/edit/{{ this._id }}"> Edit </a>|
     <a href="/products/delete/{{ this._id }}" class="text-danger delete"> Delete </a>

   {{/if}}
  </div>
</div>

  {{/each}}
</div>