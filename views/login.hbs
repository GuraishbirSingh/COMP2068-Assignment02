<h1>Login</h1>

{{#if messages}}
    <div class="alert alert-danger">{{messages}}</div>
{{else}}
    <div class="alert alert-info">Please Enter Your Username and password </div>
{{/if}}
<form method="post">
    <fieldset class="form-group">
        <label for="username" class="col-sm-2 control-label">Username or Email: </label>
        <input name="username" id="username" required />
    </fieldset>
    <fieldset class="form-group">
        <label for="password" class="col-sm-2 control-label">Password: </label>
        <input name="password" id="password" type="password" required />
    </fieldset>

        <button class="btn btn-success offset-2">Login</button>
        <hr />
        Don't have account? </br>
        <a href="register" title="Register">Register</a> here
    </fieldset>
</form>